generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Developer {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String
  phoneNumber String?
  fullTime    Boolean   @default(true)
  team        String    // "web" or "app"
  role        String    @default("developer")
  projects    String[]
  workingDays String[]
  joinedAt    DateTime  @default(now())
  tasks       Task[]    @relation("DeveloperToTasks")
}

model Task {
  id              Int         @id @default(autoincrement())
  developerId     Int
  date            DateTime
  project         String
  role            String
  team            String
  targetsGiven    String
  targetsAchieved String
  status          TaskStatus  @default(Pending)
  submittedAt     DateTime    @default(now())
  developer       Developer   @relation("DeveloperToTasks", fields: [developerId], references: [id])

  @@index([developerId])
}

// Optional: Add an enum for task status
enum TaskStatus {
  Completed
  Unfinished
  Pending
  Dependent
  PartiallyCompleted
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  password  String
  role      String   @default("admin") // Added default value
  createdAt DateTime @default(now())
}
